{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "pretty": true,
    "strict": true, // includes noImplicitAny, noImplicitThis, alwaysStrict and all strict options
    "outDir": "lib",
    "target": "ES6",
    "module": "CommonJS"
  },
  "include": ["src/**/*"],
  "exclude": ["**/*.spec.ts"],
  "typedocOptions": {
    "mode": "file",
    "module": "commonjs",
    "out": "docs"
  }
}
